# ==============================================
# TikTok Stream Tool - Environment Configuration
# ==============================================
# Copy this file to .env and adjust the values

# Server Configuration
PORT=3000
NODE_ENV=development

# Browser Auto-Open Configuration
# Set to 'false' to disable automatic browser opening on server start
# OPEN_BROWSER=true

# Database Configuration
# DATABASE_PATH=./user_configs/default/database.db

# Auto-Start Configuration
# AUTO_START_ENABLED=false
# AUTO_START_HIDDEN=false

# OBS WebSocket Configuration (optional)
# OBS_WEBSOCKET_URL=ws://localhost:4455
# OBS_WEBSOCKET_PASSWORD=

# Logging Configuration
# LOG_LEVEL=info
# LOG_TO_FILE=true

# Security Configuration
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_MAX_REQUESTS=100

# TikTok Configuration (optional)
# TIKTOK_SESSION_ID=
# TIKTOK_DEFAULT_USERNAME=

# TTS Engine API Keys (optional)
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# TikTok Connection Options (optional)
# Set to 'true' to enable Euler Stream fallbacks (requires API key from https://www.eulerstream.com)
# TIKTOK_ENABLE_EULER_FALLBACKS=false
# TIKTOK_SIGN_API_KEY=your_euler_stream_api_key_here
# Set to 'true' to use connectWithUniqueId (helps bypass captchas on low-quality IPs)
# TIKTOK_CONNECT_WITH_UNIQUE_ID=false
# Note: The tiktok-live-connector library also reads SIGN_API_KEY environment variable
# You can use either TIKTOK_SIGN_API_KEY or SIGN_API_KEY (they work the same way)

# Plugin Configuration
# PLUGIN_DIRECTORY=./plugins
# PLUGIN_AUTO_LOAD=true

# Backup Configuration
# AUTO_BACKUP_ENABLED=false
# AUTO_BACKUP_INTERVAL=86400000
# BACKUP_DIRECTORY=./.backups

# Feature Flags
# ENABLE_TELEMETRY=false
# ENABLE_AUTO_UPDATE=true
# ENABLE_PLUGIN_MARKETPLACE=false
